---
const navLinks = [
  { href: '#productos', label: 'Productos' },
  { href: '#nosotros', label: 'Nosotros' },
  { href: '#donde-comprar', label: 'Dónde Comprar' },
  { href: '#galeria', label: 'Galería' },
  { href: '#contacto', label: 'Contacto' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm border-b border-[#D4956A]/20">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href="#" class="flex items-center gap-3 shrink-0">
        <img
          src="/images/logo.png"
          alt="Productos CASA — Castro Alimentos"
          class="h-12 w-12 lg:h-14 lg:w-14 object-contain"
        />
        <div class="hidden sm:block">
          <p class="text-xs font-medium text-[#A0522D] leading-none">Productos</p>
          <p class="text-xl font-bold text-[#7B3F2D] leading-tight" >CASA</p>
        </div>
      </a>

      <!-- Desktop links -->
      <ul class="hidden lg:flex items-center gap-6">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm font-medium text-[#5C2E1F]/80 hover:text-[#7B3F2D] transition-colors duration-200 relative after:absolute after:bottom-0 after:left-0 after:h-0.5 after:w-0 after:bg-[#7B3F2D] after:transition-all hover:after:w-full"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA button -->
      <a
        href="#contacto"
        class="hidden lg:inline-flex items-center justify-center rounded-md bg-[#7B3F2D] px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-[#5C2E1F] transition-colors duration-200"
      >
        Contáctanos
      </a>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        type="button"
        aria-label="Abrir menú"
        class="lg:hidden inline-flex items-center justify-center p-2 rounded-md text-[#7B3F2D] hover:bg-[#7B3F2D]/10 transition-colors"
      >
        <svg id="icon-open" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="icon-close" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden lg:hidden pb-4 border-t border-[#D4956A]/20 mt-1">
      <ul class="flex flex-col gap-1 pt-2">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="block px-3 py-2 rounded-md text-sm font-medium text-[#5C2E1F]/80 hover:text-[#7B3F2D] hover:bg-[#7B3F2D]/5 transition-colors mobile-nav-link"
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="pt-2">
          <a
            href="#contacto"
            class="block text-center rounded-md bg-[#7B3F2D] px-5 py-2.5 text-sm font-semibold text-white hover:bg-[#5C2E1F] transition-colors mobile-nav-link"
          >
            Contáctanos
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');

  btn?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden', isOpen);
    iconOpen?.classList.toggle('hidden', !isOpen);
    iconClose?.classList.toggle('hidden', isOpen);
  });

  document.querySelectorAll('.mobile-nav-link').forEach((link) => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
      iconOpen?.classList.remove('hidden');
      iconClose?.classList.add('hidden');
    });
  });
</script>

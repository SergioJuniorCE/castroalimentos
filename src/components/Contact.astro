<section id="contacto" class="py-20 lg:py-28 bg-[#FFFDF9]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
      <!-- Contact info -->
      <div>
        <span class="inline-block text-sm font-semibold uppercase tracking-widest text-[#A0522D] mb-3">Contacto</span>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-[#3D1A0E] mb-6 leading-tight" >
          Hablemos
        </h2>
        <p class="text-[#5C2E1F]/75 leading-relaxed mb-8 text-lg">
          ¿Tienes preguntas sobre nuestros productos, pedidos especiales o eres un distribuidor interesado? Con gusto te atendemos.
        </p>

        <div class="space-y-5">
          <!-- Phone -->
          <a
            href="tel:6444179660"
            class="flex items-start gap-4 group"
          >
            <div class="w-12 h-12 rounded-xl bg-[#7B3F2D]/10 flex items-center justify-center shrink-0 group-hover:bg-[#7B3F2D]/20 transition-colors">
              <svg class="w-5 h-5 text-[#7B3F2D]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-widest text-[#A0522D]">Teléfono</p>
              <p class="text-[#3D1A0E] font-semibold group-hover:text-[#7B3F2D] transition-colors">644 417 9660</p>
            </div>
          </a>

          <!-- Website -->
          <a
            href="https://www.castroalimentos.com"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-start gap-4 group"
          >
            <div class="w-12 h-12 rounded-xl bg-[#7B3F2D]/10 flex items-center justify-center shrink-0 group-hover:bg-[#7B3F2D]/20 transition-colors">
              <svg class="w-5 h-5 text-[#7B3F2D]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-widest text-[#A0522D]">Sitio web</p>
              <p class="text-[#3D1A0E] font-semibold group-hover:text-[#7B3F2D] transition-colors">www.castroalimentos.com</p>
            </div>
          </a>

          <!-- Location -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-[#7B3F2D]/10 flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-[#7B3F2D]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-widest text-[#A0522D]">Región</p>
              <p class="text-[#3D1A0E] font-semibold">Sonora, México</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact form -->
      <div class="rounded-2xl bg-white border border-[#D4956A]/20 shadow-md p-8">
        <h3 class="text-xl font-bold text-[#3D1A0E] mb-6" >Envíanos un mensaje</h3>

        <form id="contact-form" class="space-y-4">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium text-[#5C2E1F] mb-1.5">Nombre</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Tu nombre"
                class="w-full rounded-lg border border-[#D4956A]/40 bg-white px-4 py-2.5 text-sm text-[#3D1A0E] placeholder:text-[#5C2E1F]/40 focus:outline-none focus:ring-2 focus:ring-[#7B3F2D]/40 focus:border-[#7B3F2D] transition-colors"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-[#5C2E1F] mb-1.5">Correo electrónico</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="tu@correo.com"
                class="w-full rounded-lg border border-[#D4956A]/40 bg-white px-4 py-2.5 text-sm text-[#3D1A0E] placeholder:text-[#5C2E1F]/40 focus:outline-none focus:ring-2 focus:ring-[#7B3F2D]/40 focus:border-[#7B3F2D] transition-colors"
              />
            </div>
          </div>

          <div>
            <label for="phone" class="block text-sm font-medium text-[#5C2E1F] mb-1.5">Teléfono <span class="text-[#5C2E1F]/40">(opcional)</span></label>
            <input
              type="tel"
              id="phone"
              name="phone"
              placeholder="644 000 0000"
              class="w-full rounded-lg border border-[#D4956A]/40 bg-white px-4 py-2.5 text-sm text-[#3D1A0E] placeholder:text-[#5C2E1F]/40 focus:outline-none focus:ring-2 focus:ring-[#7B3F2D]/40 focus:border-[#7B3F2D] transition-colors"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-[#5C2E1F] mb-1.5">Asunto</label>
            <select
              id="subject"
              name="subject"
              class="w-full rounded-lg border border-[#D4956A]/40 bg-white px-4 py-2.5 text-sm text-[#3D1A0E] focus:outline-none focus:ring-2 focus:ring-[#7B3F2D]/40 focus:border-[#7B3F2D] transition-colors"
            >
              <option value="">Selecciona un tema</option>
              <option value="productos">Información sobre productos</option>
              <option value="distribucion">Distribución / Mayoreo</option>
              <option value="pedido">Pedido especial</option>
              <option value="calidad">Calidad y sugerencias</option>
              <option value="otro">Otro</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-[#5C2E1F] mb-1.5">Mensaje</label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              placeholder="¿En qué podemos ayudarte?"
              class="w-full rounded-lg border border-[#D4956A]/40 bg-white px-4 py-2.5 text-sm text-[#3D1A0E] placeholder:text-[#5C2E1F]/40 focus:outline-none focus:ring-2 focus:ring-[#7B3F2D]/40 focus:border-[#7B3F2D] transition-colors resize-none"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full rounded-lg bg-[#7B3F2D] px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-[#5C2E1F] focus:outline-none focus:ring-2 focus:ring-[#7B3F2D]/50 focus:ring-offset-2 transition-all duration-200 hover:shadow-md"
          >
            Enviar mensaje
          </button>
        </form>

        <div id="form-success" class="hidden mt-4 rounded-lg bg-green-50 border border-green-200 p-4 text-center">
          <p class="text-sm font-medium text-green-700">¡Mensaje enviado! Nos pondremos en contacto pronto.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMsg = document.getElementById('form-success');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    form.classList.add('hidden');
    successMsg?.classList.remove('hidden');
  });
</script>
